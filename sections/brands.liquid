{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type":"checkbox",
      "id":"brand-header",
      "label":"Show Header",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Trusted Brands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore the Brands We Carry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover high-quality brands that bring reliability and performance to your everyday needs."
    }
  ],
  "presets": [
    {
      "name": "Brands Grid"
    }
  ]
}
{% endschema %}

<section class="brands-section page-width">
  {% if section.settings['brand-header'] %}
    <div class="brands-header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>
      <!-- <p class="description">{{ section.settings.description }}</p> -->
    </div>
  {% endif %}

  <div class="brands-grid">
    {% for brand in shop.metaobjects.brands.values %}
      {% assign brand_collection = brand.products.value %}
      {% if brand_collection %}
        <div class="brand-card">
          <a href="{{ brand_collection.url }}">
            <div class="brand-body">
              <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}" class="brand-logo">
              <h3 class="brand-name">{{ brand.name | strip_html }}</h3>
            </div>
          </a>
        </div>
      {% endif %}
      {% if brand_collection %}
        <div class="collection-products">
          {% for product in brand_collection.products limit: 3 %}
            <div class="product-card">
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}">
                <p class="product-title">{{ product.title }}</p>
                <p class="product-price">{{ product.price | money }}</p>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
        <p>No collection available for this brand.</p>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
      .brands-section {
        text-align: center;
        padding: 50px 20px;
      }

      .brands-header {
          display: flex;
          align-items: center;
          align-content: center;
          justify-content: space-between;
          margin-bottom: 25px;
      }

      .brands-header h2 {
        /* font-size: 32px; */
        font-weight: bold;
        margin-bottom: 10px;
      }

      .brands-header .subheading {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
      }

      .brands-header .description {
        font-size: 16px;
        color: #444;
        max-width: 600px;
        margin: 0 auto 30px;
      }

      .brands-grid {
          display: flex;
          flex-direction: row;
          flex-wrap: wrap;
          gap: 25px;
          align-items: flex-start;
      }

      .brand-card {
        padding: 2rem;
        border-radius: 4px;
        border: 1px solid #c3c3c3;
        width: 20%;
        flex-grow:1;
        min-width: 250px;
        transition: all 0.2s ease-in-out;

    }

  .collection-products {
    display: flex;
    gap: 15px;
    width:75%;
    flex-grow:1;
  }

    .brand-body{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    }

    .brand-body > * {
      width: 100%;
      margin: 0;
  }
</style>

