<style>
      .brands-section {
        text-align: center;
        padding: 50px 20px;
      }

      .brands-header {
          display: flex;
          align-items: center;
          align-content: center;
          justify-content: space-between;
          margin-bottom: 25px;
      }

      .brands-header h2 {
        /* font-size: 32px; */
        font-weight: bold;
        margin-bottom: 10px;
      }

      .brands-header .subheading {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
      }

      .brands-header .description {
        font-size: 16px;
        color: #444;
        max-width: 600px;
        margin: 0 auto 30px;
      }

      .brands-grid {
          display: flex;
          flex-direction: row;
          flex-wrap: wrap;
          gap: 25px;
          align-items: flex-start;
          margin-bottom:25px;
      }

          .brand-card {
            width: 100%;
            flex-grow:1;
            min-width: 250px;
            transition: all 0.2s ease-in-out;
        }

  .brand-card a{text-decoration:none;color:#222;}

  .brand-collection--products {
    display: flex;
    flex-wrap:wrap;
    gap: 15px;
    width:100%;
    flex-grow:1;
    align-items: flex-start;
  }

  .brand-collection--products .product-card a {text-decoration:none; color:#222;}

  .product-card {
    width: 20%;
    flex-grow: 1;
  }
    .brand-body{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    }

    /* .brand-body > * {
      width: 100%;
      margin: 0;
  } */

      .brand-logo {
        width: 130px;  /* Standardized logo size */
        height: 130px;
        object-fit: contain;
        margin-bottom: 10px;
      }

      .brand-name {
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        color: #333;
      }
</style>

{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type":"checkbox",
      "id":"brand-header",
      "label":"Show Header",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Trusted Brands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore the Brands We Carry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover high-quality brands that bring reliability and performance to your everyday needs."
    }
  ],
  "presets": [
    {
      "name": "Brands Grid"
    }
  ]
}
{% endschema %}

<section class="brands-section page-width">
  {% if section.settings['brand-header'] %}
    <div class="brands-header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>
    </div>
  {% endif %}
  {% for brand in shop.metaobjects.brands.values %}
    <div class="brands-grid">
      {% assign brand_collection = brand.products.value %}
      {% if brand_collection %}
        <div class="brand-card">
          <a href="{{ brand_collection.url }}">
            <div class="brand-body">
              <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}" class="brand-logo">
              <h3 class="brand-name">{{ brand.name | strip_html }}</h3>
              <p>{{ brand.details | metafield_tag }}</p>
              <p class="">Explore More <span>&#8594;</span></p>
            </div>
          </a>
        </div>
      {% endif %}
      <!--
        {% if brand_collection %}
          <div class="brand-collection--products">
            <h3 style="width:100%;">Featured Products</h3>
            {% for product in brand_collection.products limit: 6 %}
              <div class="product-card">
                <a href="{{ product.url }}">
                  <img src="{{ product.featured_image | image_url }}" alt="{{ product.title }}">
                  <p class="product-title">{{ product.title }}</p>
                  <p class="product-price">{{ product.price | money }}</p>
                </a>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <p>No collection available for this brand.</p>
        {% endif %}
      -->
    </div>
  {% endfor %}
</section>
