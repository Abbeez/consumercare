<style>
  .brands-header {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-between;
    margin-bottom: 25px;
  }brands

  .brands-header h2 {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .brands-header .subheading {
    font-size: 18px;
    color: #666;
    margin-bottom: 10px;
  }

  .brands-header .description {
    font-size: 16px;
    color: #444;
    max-width: 600px;
    margin: 0 auto 30px;
  }

  /* GRID SECTION */

  .brands-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 25px;
    align-items: flex-start;
    margin-bottom: 25px;
    border: 1px solid #c3c3c3;
    padding: 2rem;
    border-radius: 2px;
    background: #fff;
    justify-content: space-around;
  }

  .brands-grid a {
    text-decoration: none;
  }

  .brand-card {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 25px;
    text-align: left;
    color: #222;
  }

  .brand-card .brand-card-column:first-child {
    order: 2;
    border: 1px solid #c3c3c3;
    border-radius: 2px;
    padding: 5px;
    background: #fff;
    position: relative;
  }

  span.collection-product-count {
    border: 1px solid #c3c3c3;
    border-radius: 2;
    padding: 8px 16px;
    background: #d6f9ff;
    color: #222;
    position: absolute;
    right: -8px;
    bottom: -8px;
    font-size: 14px;
  }

  .brand-buttons {
    display: flex;
    flex-direction: row;
    gap: 20px;
    justify-content: flex-start;
    transition: all 0.5s;
  }

  .brand-buttons a {
    color: #222;
    text-decoration: none;
    display: block;
    padding: 0.5rem 1.5rem;
    border: 1px solid #e1e1e1;
    border-radius: 2px;
    background: #fff;
  }

  .brand-buttons a:last-child {
    background: transparent;
    border: none;
  }

  .brand-buttons a:hover {
    opacity: 0.7;
  }

  .brand-logo {
    width: 130px; /* Standardized logo size */
    height: 130px;
    object-fit: contain;
    margin-bottom: 10px;
  }

  .brand-name {
    font-size: 16px;
    font-weight: bold;
    color: #333;
  }

  /* END GRID SECTION */

  @media screen and (max-width: 750px) {
      .brands-section{padding:30px auto !important;}
    .brands-header {
      flex-direction: column;
    }

    .brands-header > * {
      margin: 0;
    }

    .brand-card {
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
    }

    .brand-card .brand-card-column:first-child {
      order: 1 !important;
    }

    .brand-card .brand-card-column:last-child {
      order: 2;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }

  @media screen and (max-width: 375px) {



    .brand-buttons {
      display: flex;
      flex-direction: column;
    }
  }
</style>

{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type":"checkbox",
      "id":"brand-header",
      "label":"Show Header",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Trusted Brands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore the Brands We Carry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover high-quality brands that bring reliability and performance to your everyday needs."
    }
  ],
  "presets": [
    {
      "name": "Brands Grid"
    }
  ]
}
{% endschema %}

<section class="brands-section page-width">
  {% if section.settings['brand-header'] %}
    <div class="brands-header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>
    </div>
  {% endif %}
  {% for brand in shop.metaobjects.brands.values %}
    <div class="brands-grid">
      {% assign brand_collection = brand.products.value %}

      {% if brand_collection %}
        <div class="brand-card">
          <div class="brand-card-column">
            <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}" class="brand-logo">
            <!-- <span class="collection-product-count">{{ brand_collection.products | size }}</span> -->
          </div>
          <div class="brand-card-column">
            <h3 class="brand-name">{{ brand.name | strip_html }}</h3>
            <p>{{ brand.details | metafield_tag }}</p>
            <div class="brand-buttons">
              <a href="{{ brand_collection.url }}">View Products</a>
              <a href="{{- brand.landing.value.url -}}" target="_blank"> Learn More <span>&#8599;</span> </a>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</section>

