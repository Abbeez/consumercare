<style>
        .brands-section {
          text-align: center;
          padding: 50px 20px;
        }

        .brands-header {
            display: flex;
            align-items: center;
            align-content: center;
            justify-content: space-between;
            margin-bottom: 25px;
        }

        .brands-header h2 {
          font-weight: bold;
          margin-bottom: 10px;
        }

        .brands-header .subheading {
          font-size: 18px;
          color: #666;
          margin-bottom: 10px;
        }

        .brands-header .description {
          font-size: 16px;
          color: #444;
          max-width: 600px;
          margin: 0 auto 30px;
        }

    /* GRID SECTION */

        .brands-grid {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 25px;
            align-items: flex-start;
            margin-bottom:25px;
            transition: all 0.5s;
            border:1px solid #c3c3c3;
            padding:2rem;
            border-radius:2px;
        }

      .brands-grid:nth-child(odd){
        background:#f2f2f2;
      }

          .brands-grid:hover {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 25px;
            align-items: flex-start;
            margin-bottom:25px;
            opacity:0.8;
            transform:translateY(-5px)
        }



    .brands-grid a{text-decoration:none;}

        .brand-card {
          display: flex;
          flex-direction: row;
          justify-content: space-between;
          align-items: center;
          gap: 25px;
          text-align:left;
          color:#222;
      }


          .brand-card .brand-card-column:first-child {
            order:2;
            border:1px solid #c3c3c3;
            border-radius:2px;
            padding:5px;
            background:#fff;
            position:relative;
      }

    span.collection-product-count {
      border:1px solid #c3c3c3;
      border-radius: 2;
      padding: 8px 16px;
      background: #d6f9ff;
      color: #222;
      position: absolute;
      right: -8px;
      bottom: -8px;
      font-size:14px;
  }

  .brand-buttons {
    display:flex;
  }

    .brand-buttons a {
      text-decoration:none;
      display:inline-block;

  }

        .brand-logo {
          width: 130px;  /* Standardized logo size */
          height: 130px;
          object-fit: contain;
          margin-bottom: 10px;
        }

        .brand-name {
          font-size: 16px;
          font-weight: bold;
          color: #333;
        }

    /* END GRID SECTION */
</style>

{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type":"checkbox",
      "id":"brand-header",
      "label":"Show Header",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Trusted Brands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore the Brands We Carry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover high-quality brands that bring reliability and performance to your everyday needs."
    }
  ],
  "presets": [
    {
      "name": "Brands Grid"
    }
  ]
}
{% endschema %}

<section class="brands-section page-width">
  {% if section.settings['brand-header'] %}
    <div class="brands-header">
      <h2>{{ section.settings.heading }}</h2>
      <p class="subheading">{{ section.settings.subheading }}</p>
    </div>
  {% endif %}
  {% for brand in shop.metaobjects.brands.values %}
    <div class="brands-grid">
      {% assign brand_collection = brand.products.value %}

      {% if brand_collection %}
        <div class="brand-card">
          <div class="brand-card-column">
            <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}" class="brand-logo">
            <span class="collection-product-count">{{ brand_collection.products | size }}</span>
          </div>
          <div class="brand-card-column">
            <h3 class="brand-name">{{ brand.name | strip_html }}</h3>
            <p>{{ brand.details | metafield_tag }}</p>
            <div class="brand-buttons">
              <a href="{{ brand_collection.url }}">View Products</a>
              <a href="{{- brand.landing.value.url -}}" target="_blank">
                Learn More About This Brand
                <span>&#8594;</span>
              </a>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  {% endfor %}
</section>

