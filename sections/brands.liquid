{% schema %}
{
  "name": "Brands Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Trusted Brands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Explore the Brands We Carry"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover high-quality brands that bring reliability and performance to your everyday needs."
    }
  ],
  "presets": [
    {
      "name": "Brands Grid"
    }
  ]
}
{% endschema %}

<section class="brands-section page-width">
  <div class="brands-header">
    <h2>{{ section.settings.heading }}</h2>
    <p class="subheading">{{ section.settings.subheading }}</p>
    <p class="description">{{ section.settings.description }}</p>
  </div>

  <div class="brands-grid">
    {% for brand in shop.metaobjects.brands.values %}
      <div class="brand-card">
        <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}" class="brand-logo">
        <h3 class="brand-name">{{ brand.name | strip_html }}</h3>
        <p class="brand-details">{{ brand.details | metafield_tag }}</p>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .brands-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 15px;
    justify-content: center;
    align-items: stretch;
  }

  .brand-card {
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.08);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    min-height: 300px; /* Ensures all cards are the same height */
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .brand-logo {
    width: 120px;  /* Standardized logo size */
    height: 120px;
    object-fit: contain;
    margin-bottom: 10px;
  }

  .brand-name {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 5px;
    text-align: center;
  }

  .brand-details {
    font-size: 14px;
    color: #555;
    flex-grow: 1; /* Forces text to take up space evenly */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 90%;
    min-height: 40px; /* Forces uniform spacing for details */
  }
</style>
