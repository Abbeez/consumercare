<section class="banner-slider">
  {% for block in section.blocks %}
    <div class="customslider">
      <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}">
      </a>
    </div>
  {% endfor %}
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
      $('.customslider').slick({
          slidesToShow: 1,
          slidesToScroll: 1,
          autoplay: true,
          autoplaySpeed: 3000,
          dots: true,
          arrows: true,
      });
  });
</script>

<style>
  .banner-slider {
      /* max-width: 1200px; */
      margin: 0 auto;
      /* padding: 20px; */
  }
  .slider a {
      display: block;
  }
  .slider img {
      width: 100%;
      height: auto;
  }
</style>

{% schema %}
{
    "name": "Banner Slider",
    "settings": [],
    "blocks": [
        {
            "type": "image",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Slide Image"
                },
                {
                    "type": "text",
                    "id": "alt_text",
                    "label": "Alt Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Slide Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Banner Slider",
            "category": "Image"
        }
    ]
}
{% endschema %}
