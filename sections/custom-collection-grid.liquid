<section
  id="customCollection"
  class="custom-collection__section scroll-trigger animate--slide-in"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="container">
    <!-- Section Title -->
    <h2 class="collection-title">{{ section.settings.heading }}</h2>

    <div class="custom-collection-list">
      {% for block in section.blocks %}
        {% assign collection_handle = block.settings.boxed_collection %}
        {% if collection_handle != blank %}
          {% assign collection = collections[collection_handle] %}
          <div class="collection-container">
            <a href="{{ collection.url }}" alt="{{ collection.title }}">
              <div class="collection-card">
                <!-- <h3>{{ collection.title | truncate: 55 }}</h3> -->
                {% if collection.image %}
                  <img src="{{ collection.image | image_url }}" alt="{{ collection.title }}">
                {% endif %}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Short Description with Icon -->
    {% if section.settings.short_description != blank %}
      <p class="collection-description"><span class="icon">ðŸ“Œ</span> {{ section.settings.short_description }}</p>
    {% endif %}

    <!-- CTA Button with Emoji -->
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <div class="cta-wrapper">
        <a href="{{ section.settings.cta_link }}" class="cta-button"> ðŸ‘‰ {{ section.settings.cta_text }} </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Collection List",
  "settings": [
    {
      "type": "text",
      "id": "short_description",
      "label": "Short Description",
      "default": "Tatara isnâ€™t just another brandâ€”itâ€™s a guarantee of power, precision, and durability."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Explore Our Collections"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now & Upgrade Your Toolkit"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "Collections",
      "name": "Collection List",
      "limit": 12,
      "settings": [
        {
          "type": "collection",
          "id": "boxed_collection",
          "label": "Choose a collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection List"
    }
  ]
}
{% endschema %}
