{% schema %}
{
  "name": "Brand Info",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Brand Info"
    }
  ]
}
{% endschema %}

{% if product.metafields.custom.about_the_brand != blank %}
  {% assign brand = product.metafields.custom.about_the_brand.value %}

  {% if brand != blank %}
    <div
      class="brand-info"
      style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
    >
      <div class="brand-logo">
        <img src="{{ brand.logo | image_url }}" alt="{{ brand.name }}">
      </div>
      <div class="brand-details">
        <h2>{{ brand.name }}</h2>
        <p>{{ brand.details | metafield_tag }}</p>
      </div>
    </div>

    <style>
      .brand-info {
        display: flex;
        align-items: center;
        gap: 20px; /* Space between columns */
        max-width: 800px; /* Adjust width as needed */
        margin: 0 auto; /* Center align */
      }

      .brand-logo img {
        max-width: 150px; /* Adjust logo size */
        height: auto;
        border-radius: 10px; /* Optional: Rounded corners */
      }

      .brand-details {
        flex: 1; /* Takes remaining space */
      }

      .brand-details h2 {
        margin: 0 0 10px;
        font-size: 24px;
      }

      .brand-details p {
        font-size: 16px;
        color: #666;
      }

      /* Responsive */
      @media (max-width: 600px) {
        .brand-info {
          flex-direction: column;
          text-align: center;
        }
      }
    </style>
  {% endif %}
{% endif %}
