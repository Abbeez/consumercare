{% style %}
  .theme-page--title{
    background-size: cover !important;
    background-repeat: no-repeat !important;
    padding: 7rem 1rem;
    color: #fff;
    /* height: 270px;
    min-height: 230px; */
    }

  /* .theme-container {
    margin: auto;
    max-width: var(--page-width);
  } */



  .theme-page--title h1 {margin:0;}
{% endstyle %}

{% assign themebg = section.settings['theme-page--background'] %}
{% assign titlecenter = section.settings['theme-title--center'] %}
{% assign themecolor = section.settings['theme-text-color'] %}
<div
  class="theme-page--title"
  style="{% if themebg %} background: url('{{ themebg | image_url }}');{% endif %}{% if titlecenter %} text-align:center; {% endif %}"
>
  <div class="theme-container page-width">
    <div class="theme-page--header">
      <p
        style="{% if themecolor %} color: #121212; {% else %}color: #fff;{% endif %}"
        class="caption-with-letter-spacing"
      >
        {{ section.settings['theme-page--description'] | strip_html }}
      </p>
      <h1 style="{% if themecolor %} color: #222; {% else %}color: #fff;{% endif %}">
        {{ section.settings['theme-page--title'] | strip_html }}
      </h1>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page Title",
  "settings": [
    {
      "type":"text",
      "id":"theme-page--title",
      "label": "Page Header Title",
      "default":"CCPI provides high-quality, value-for-money products enriching Filipino lives every day."
    },
    {
      "type":"inline_richtext",
      "id":"theme-page--description",
      "label": "Page Header Description",
      "default":"CCPI provides high-quality, value-for-money products for home, personal, pet, and motor careâ€”enriching Filipino lives every day."
    },
    {
      "type":"checkbox",
      "id":"theme-title--center",
      "label": "Center the page title",
      "default":false
    },
    {
      "type":"checkbox",
      "id":"theme-text-color",
      "label": "Change Text Color",
      "default":false
    },
    {
      "type":"image_picker",
      "label": "Page Background",
      "id":"theme-page--background"
    }
  ],
  "presets":[
    {
      "name":"Page Title"
    }
  ]
}
{% endschema %}
